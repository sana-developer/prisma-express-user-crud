generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

enum UserRole {
  ADMIN
  USER
}

model User {
  id          String         @id @default(uuid())
  role        UserRole
  name        String
  email       String
  age         Int?
  password    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  deleted     Boolean     @default(false)
  archived   Int     @default(0)
}
